<?xml version="1.0" encoding="utf-8"?><!--<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:orientation="vertical" android:layout_width="match_parent"--><!--android:layout_height="match_parent"--><!--android:id="@+id/category_scroll_layout">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorGvDivider"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.app.graduationproject.view.ImageCycleView
        android:id="@+id/scrollimage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.app.graduationproject.view.ImageCycleView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:text="全部分类"
        android:textSize="20sp" />


    <GridView
        android:id="@+id/gview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorGvDivider"
        android:gravity="center"
        android:horizontalSpacing="0.0dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0.0dp"></GridView>


    <!--android:numColumns="auto_fit"-->
    <!--android:columnWidth="80dp"-->
</LinearLayout>

